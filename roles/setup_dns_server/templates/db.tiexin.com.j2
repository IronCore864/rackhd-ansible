;
; BIND data file for local loopback interface
;
$TTL	604800
@	IN	SOA	ns1.{{ zone }}. admin.{{ zone }}. (
			      3		; Serial
			 604800		; Refresh
			  86400		; Retry
			2419200		; Expire
			 604800 )	; Negative Cache TTL
;
; name servers - NS records
    IN      NS      ns1.{{ zone }}.
; name servers - A records
ns1.{{ zone }}.          IN      A       {{ infra_vm_ip }}

; 172.16.2.0/24 - A records
rackhd.{{ zone }}.              IN      A      {{ rackhd_ip }}
opnsense.{{ zone }}.            IN      A      {{ opnsense_ip }}
infra-server.{{ zone }}.        IN      A      {{ infra_server_ip }}
